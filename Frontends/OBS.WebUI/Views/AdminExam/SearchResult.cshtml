@model List<GetExamsWithCoursesAndTeachersDto>

<div class="table-responsive mt-4">
	@if (Model != null && Model.Any())
	{
		<h2>Arama Sonuçları</h2>
		<table class="table table-striped table-bordered align-middle">
			<thead class="table-light">
				<tr>
					<th>ID</th>
					<th>Ders Adı</th>
					<th>Öğretim Üyesi Adı</th>
					<th>Sınav Adı</th>
					<th>Ağırlık Oranı</th>
					<th>Oluşturulma Tarihi</th>
					<th style="width: 100px;">İşlemler</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.examID</td>
						<td>@item.courseName</td>
						<td>@item.teacherName @item.teacherSurname</td>
						<td>@item.examName</td>
						<td>@item.weight</td>
						<td>@item.createdTime.ToString("dd-MM-yyyy")</td>
						<td>
							<div class="d-flex gap-2">
								<a href="/AdminExam/UpdateExam/@item.examID" class="btn btn-sm btn-outline-success" title="Güncelle">
									<i class="bi bi-pencil-square"></i>
								</a>
								<a href="/AdminExam/RemoveExam/@item.examID" class="btn btn-sm btn-outline-danger" title="Sil" onclick="return confirm('Bu sınavı silmek istediğinize emin misiniz?');">
									<i class="bi bi-trash"></i>
								</a>
							</div>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<div class="alert alert-info mt-3">
			Herhangi bir sınav bulunamadı.
		</div>
	}
</div>
