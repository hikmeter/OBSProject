@model List<GetStudentsWithDepartmentsDto>

<div class="table-responsive mt-4">
    @if (Model != null && Model.Any())
    {
        <h2>Arama Sonuçları</h2>
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Öğrenci No</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Bölüm</th>
                    <th>Doğum Tarihi</th>
                    <th style="width: 100px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.studentNo</td>
                        <td>@student.name</td>
                        <td>@student.surname</td>
                        <td>@student.departmentName</td>
                        <td>@student.birthDate.ToString("dd-MM-yyyy")</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a href="/AdminStudent/UpdateStudent/@student.studentID" class="btn btn-sm btn-outline-success" title="Güncelle">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a href="/AdminStudent/RemoveStudent/@student.studentID" class="btn btn-sm btn-outline-danger" title="Sil" onclick="return confirm('Bu öğrenciyi silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                                <a href="/AdminStudentCourse/Transcript/@student.studentID" class="btn btn-sm btn-outline-primary" title="Transkript Görüntüle">
                                    <i class="bi bi-file-earmark-text"></i> Transkript
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3">
            Arama kriterlerine uygun öğrenci bulunamadı.
        </div>
    }
</div>
