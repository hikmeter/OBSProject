@model UpdateCourseDto
@{
	ViewData["Title"] = "Ders Güncelle";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-8 offset-xl-2">
				<div class="card shadow-sm border-0">
					<div class="card-body">
						<h4 class="mb-4">✏️ Ders Güncelle</h4>
						<form method="post">
							@Html.ValidationSummary(false, "", new { @class = "text-danger" })
							<input type="hidden" asp-for="courseID" />
							<div class="mb-3">
								<label asp-for="courseCode" class="form-label">Ders Kodu</label>
								<input asp-for="courseCode" class="form-control" />
								<span asp-validation-for="courseCode" class="text-danger"></span>
							</div>
							<div class="mb-3">
								<label asp-for="courseName" class="form-label">Ders Adı</label>
								<input asp-for="courseName" class="form-control" />
								<span asp-validation-for="courseName" class="text-danger"></span>
							</div>
							<div class="mb-3">
								<label asp-for="credit" class="form-label">AKTS</label>
								<input asp-for="credit" type="number" class="form-control" />
								<span asp-validation-for="credit" class="text-danger"></span>
							</div>
							<div class="mb-3">
								<label asp-for="departmentID" class="form-label">Bölüm</label>
								@Html.DropDownListFor(x => x.departmentID, (List<SelectListItem>)ViewBag.DepartmentValues, "-- Bölüm Seçin --", new { @class = "form-control" })
								<span asp-validation-for="departmentID" class="text-danger"></span>
							</div>
							<div class="mb-3">
								<label asp-for="teacherID" class="form-label">Öğretim Üyesi ID</label>
								<input asp-for="teacherID" class="form-control" />
								<span asp-validation-for="teacherID" class="text-danger"></span>
							</div>
							<div class="text-end">
								<button type="submit" class="btn btn-primary">
									<i class="bi bi-save me-1"></i> Güncelle
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>