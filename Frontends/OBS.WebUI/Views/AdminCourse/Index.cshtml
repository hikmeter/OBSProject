@model List<ResultGetCoursesWithDepartmentsDto>
@{
    ViewData["Title"] = "Ders Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h4 class="mb-1">📚 Ders Listesi</h4>
                                <p class="text-muted mb-0">Tanımlı dersleri görüntüleyebilir, düzenleyebilir veya silebilirsiniz.</p>
                            </div>
                            <a href="/AdminCourse/CreateCourse" class="btn btn-primary">
                                + Yeni Ders Ekle
                            </a>
                        </div>

                        @if (Model != null && Model.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 50px;">#</th>
                                            <th>Ders Kodu</th>
                                            <th>Ders Adı</th>
                                            <th>Bölüm</th>
                                            <th>AKTS</th>
                                            <th style="width: 100px;">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.courseID</td>
                                                <td>@item.courseCode</td>
                                                <td>@item.courseName</td>
                                                <td>@item.departmentName</td>
                                                <td>@item.credit</td>
                                                <td>
                                                    <div class="d-flex gap-2">
                                                        <a href="/AdminCourse/UpdateCourse/@item.courseID" class="btn btn-sm btn-outline-success" title="Güncelle">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <a href="/AdminCourse/RemoveCourse/@item.courseID" class="btn btn-sm btn-outline-danger" title="Sil" onclick="return confirm('Bu dersi silmek istediğinize emin misiniz?');">
                                                            <i class="bi bi-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mt-3">
                                Sistemde tanımlı ders bulunmamaktadır.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>