@model List<ResultGetDepartmentsWithFacultiesDto>
@{
    ViewData["Title"] = "Bölüm Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h4 class="mb-1">🏛️ Bölüm Listesi</h4>
                                <p class="text-muted mb-0">Aşağıdaki listede üniversitenizdeki bölümleri görebilir, güncelleyebilir veya silebilirsiniz.</p>
                            </div>
                            <a href="/AdminDepartment/CreateDepartment" class="btn btn-primary">
                                + Yeni Bölüm Ekle
                            </a>
                        </div>
                        @if (Model != null && Model.Count > 0)
                        {
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 50px;">#</th>
                                            <th>Bölüm Adı</th>
                                            <th>Fakülte Adı</th>
                                            <th style="width: 100px;">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.departmentName</td>
                                                <td>@item.facultyName</td>
                                                <td>
                                                    <div class="d-flex gap-2">
                                                        <a href="/AdminDepartment/UpdateDepartment/@item.departmentID" class="btn btn-sm btn-outline-success" title="Güncelle">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <a href="/AdminDepartment/RemoveDepartment/@item.departmentID" class="btn btn-sm btn-outline-danger" title="Sil" onclick="return confirm('Bu bölümü silmek istediğinize emin misiniz?');">
                                                            <i class="bi bi-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info mt-3">
                                Sistemde tanımlı bölüm bulunmamaktadır.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>